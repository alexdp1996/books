@{
    ViewBag.Title = "Index";
}

@Html.Partial("~/Views/Shared/_Popup.cshtml", "popup")

<div id="add-template" class="hidden">
    <button class="btn btn-default author-get"><i class="glyphicon glyphicon-plus"></i></button>
</div>

<table class="table table-striped table-bordered dataTable" style="width: 100%;" id="authors">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Surname
            </th>
            <th>
                Amount of books
            </th>
            <th>
            </th>
    </thead>
    <tbody></tbody>
</table>

@Styles.Render("~/datatables/css")
@Scripts.Render("~/bundles/datatables")
@Scripts.Render("~/bundles/view-models")
@Scripts.Render("~/bundles/authors")
<script>
    var DT;
    $(document).ready(function () {
        let urls = {};
        urls.get = "@Url.Action("Get")";
        urls.dtData = "@Url.Action("GetList")";
        urls.delete = "@Url.Action("DeleteModal")";
        DT = new AuthorDataTableController(urls);
    });
</script>
