@{
    ViewBag.Title = "Index";
}

@Html.Partial("~/Views/Shared/_Delete.cshtml")

<table class="table table-striped table-bordered dataTable" id="books">
    <thead>
        <tr>
            <th>
                Caption
            </th>
            <th>
                Pages
            </th>
            <th>
                Rate
            </th>
            <th>
                Year
            </th>
            <th>
                Authors
            </th>
            <th>
                <a class="btn btn-default" href="@Url.Action("Get")"><i class="glyphicon glyphicon-plus"></i></a>
            </th>
    </thead>
    <tbody></tbody>
</table>

@section scripts{
    @Scripts.Render("~/Scripts/book-list.js")
    @Scripts.Render("~/Scripts/delete-modal.js")
    <script>
        $(document).ready(function () {
            BookList.getBooksUrl = "@Url.Action("GetBooks")";
            BookList.getUrl = "@Url.Action("Get")";
            BookList.authorGetUrl = "@Url.Action("Get", "Author")";
            BookList.Init();
            DeleteModal.url = "@Url.Action("Delete")";
            DeleteModal.grid = BookList.grid;
            DeleteModal.Init();
        });
    </script>
}