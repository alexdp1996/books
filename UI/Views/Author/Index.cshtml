@{
    ViewBag.Title = "Index";
}

@Html.Partial("~/Views/Shared/_Delete.cshtml")
@Html.Partial("~/Views/Shared/_Popup.cshtml", "popup")

<div id="add-template" class="hidden">
    <button class="btn btn-default author-popup" data-toggle="modal" data-target="#popup"><i class="glyphicon glyphicon-plus"></i></button>
</div>

<table class="table table-striped table-bordered dataTable" style="width: 100%;" id="authors">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Surname
            </th>
            <th>
                Amount of books
            </th>
            <th>
            </th>
    </thead>
    <tbody></tbody>
</table>

@Styles.Render("~/datatables/css")
@Scripts.Render("~/bundles/datatables")
@Scripts.Render("~/bundles/authors")
<script>
    $(document).ready(function () {
        AuthorList.getDataUrl = "@Url.Action("GetAuthors")";
        AuthorList.getUrl = "@Url.Action("Get")";
        AuthorList.deleteUrl = "@Url.Action("Delete")";
        AuthorList.Init();
    });
</script>
