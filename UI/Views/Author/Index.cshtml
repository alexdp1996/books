@{
    ViewBag.Title = "Index";
}

@Html.Partial("~/Views/Shared/_Delete.cshtml")

<table class="table table-striped table-bordered dataTable" id="authors">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Surname
            </th>
            <th>
                Amount of books
            </th>
            <th>
                <a class="btn btn-default" href="@Url.Action("Get")"><i class="glyphicon glyphicon-plus"></i></a>
            </th>
    </thead>
    <tbody></tbody>
</table>

@section scripts{
    @Scripts.Render("~/Scripts/author-list.js")
    @Scripts.Render("~/Scripts/delete-modal.js")
<script>
        $(document).ready(function () {
            AuthorList.getAuthorsUrl = "@Url.Action("GetAuthors")";
            AuthorList.getUrl = "@Url.Action("Get")";
            AuthorList.Init();
            DeleteModal.url = "@Url.Action("Delete")";
            DeleteModal.grid = AuthorList.grid;
            DeleteModal.Init();
        });
</script>
}